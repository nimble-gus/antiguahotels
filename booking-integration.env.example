# Booking.com Integration Configuration
# Copy this file to .env and fill in your actual values

# Booking.com Webhook Configuration
BOOKING_WEBHOOK_SECRET=your_webhook_secret_here
BOOKING_API_KEY=your_api_key_here
BOOKING_API_SECRET=your_api_secret_here

# Booking.com API Endpoints
BOOKING_API_BASE_URL=https://distribution-xml.booking.com/2.0/json
BOOKING_WEBHOOK_URL=https://yourdomain.com/api/webhooks/booking

# Sync Configuration
SYNC_INTERVAL_HOURS=1
AUTO_SYNC_ENABLED=true

# Notification Settings
NOTIFY_ON_CONFLICTS=true
NOTIFY_ON_SYNC_ERRORS=true
NOTIFICATION_EMAIL=admin@yourdomain.com

# Hotel Mapping (Map your internal hotel IDs to Booking.com property IDs)
HOTEL_MAPPING_1=your_internal_hotel_id:booking_property_id
HOTEL_MAPPING_2=your_internal_hotel_id:booking_property_id

# Room Type Mapping (Map your internal room type IDs to Booking.com room type IDs)
ROOM_TYPE_MAPPING_1=your_internal_room_type_id:booking_room_type_id
ROOM_TYPE_MAPPING_2=your_internal_room_type_id:booking_room_type_id
